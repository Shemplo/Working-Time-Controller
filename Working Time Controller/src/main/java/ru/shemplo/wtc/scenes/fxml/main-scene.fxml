<?xml version="1.0" encoding="UTF-8"?>

<?import ru.shemplo.wtc.scenes.MainScene?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import ru.shemplo.wtc.Run?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<MainScene
	xmlns:fx="http://javafx.com/fxml/1"
	alignment="TOP_RIGHT">
	<VBox minWidth="300">
		<Label styleClass="title" text="TITLE" fx:id="title_sl" />
		
		<HBox>
			<Label 
				text="Project name: " 
				fx:id="name_info_sl" />
			<Label 
				text="[ &lt;- click here to open project ]" 
				fx:id="name_sl" />
		</HBox>
		
		<HBox>
			<Label text="Project path: "/>
			<Label 
				text="[ here will be displaied path to your project ]" 
				fx:id="path_sl" />
		</HBox>
		
		<HBox alignment="BASELINE_LEFT">
			<Label text="Working time: "/>
			<Label
				text="00:00:00" 
				fx:id="time_sl" />
		</HBox>
	</VBox>
	
	<Button
		fx:id="open_menu_sb"
		text="≡" />
	
	<GridPane
		alignment="TOP_RIGHT"
		hgap="5" vgap="2.5"
		visible="true"
		fx:id="menu_sgp">
		<Button
			GridPane.halignment="CENTER"
			GridPane.rowIndex="0"
			GridPane.columnIndex="0"
			GridPane.columnSpan="1"
			styleClass="warn_button"
			fx:id="exit_sb"
			text="X" />
		<Button
			GridPane.rowIndex="0"
			GridPane.columnIndex="1"
			fx:id="close_menu_sb"
			text="≡" />
		<Button
			GridPane.rowIndex="2"
			GridPane.columnIndex="0"
			fx:id="infinity_sb"
			text="&gt;" />
		<Button
			GridPane.rowIndex="2"
			GridPane.columnIndex="1"
			fx:id="stop_sb"
			text="■" />
	</GridPane>
</MainScene>

