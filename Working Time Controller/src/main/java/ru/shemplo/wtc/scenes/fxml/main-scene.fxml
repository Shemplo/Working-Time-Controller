<?xml version="1.0" encoding="UTF-8"?>

<?import ru.shemplo.wtc.scenes.MainScene?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import ru.shemplo.wtc.Run?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>

<MainScene
	xmlns:fx="http://javafx.com/fxml/1"
	alignment="TOP_RIGHT">
	<VBox>
		<HBox alignment="CENTER_LEFT">
			<VBox>
				<Button
					fx:id="infinity_sb"
					text="&gt;">
					<VBox.margin>
						<Insets bottom="5"/>
					</VBox.margin>
				</Button>
				<Button
					fx:id="stop_sb"
					text="â– ">
					<VBox.margin>
						<Insets bottom="0"/>
					</VBox.margin>
				</Button>
				
				<HBox.margin>
					<Insets right="10" />
				</HBox.margin>
			</VBox>
			
			<VBox
				minWidth="100" 
				alignment="CENTER">
				<Label fx:id="time_sl" />
				<padding>
					<Insets right="10" />
				</padding>
			</VBox>
			
			<VBox alignment="CENTER_LEFT">
				<Label 
					styleClass="title" 
					text="[ click to open project ]" 
					fx:id="title_sl"/>
				<Label
					text="- here will be path to the project -"
					fx:id="path_sl" />
					
				<Label fx:id="stat_sl" />
				
				<HBox.margin>
					<Insets right="10" />
				</HBox.margin>
			</VBox>
			
			<VBox alignment="TOP_CENTER">
				<Button
					styleClass="warn_button"
					fx:id="exit_sb"
					text="X">
					<VBox.margin>
						<Insets bottom="7.5" />
					</VBox.margin>
				</Button>
				<ImageView fx:id="network_siv"/>
			</VBox>
		</HBox>
	</VBox>
</MainScene>

