<?xml version="1.0" encoding="UTF-8"?>

<?import ru.shemplo.wtc.scenes.ProjectsScene?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<ProjectsScene
	xmlns:fx="http://javafx.com/fxml/1">
	<VBox>
		<Label 
			styleClass="half_title" 
			text="Select existing project" />
	
		<HBox alignment="CENTER_LEFT">
			<Label text="Choose project: " />
			<ChoiceBox fx:id="projects_scb"></ChoiceBox>
			<Button 
				text="Open" 
				fx:id="open_sb">
				<HBox.margin>
					<Insets left="5" />
				</HBox.margin>
			</Button> 
			
			<VBox.margin>
				<Insets bottom="15" />
			</VBox.margin>
		</HBox>
		
		<Label 
			styleClass="half_title" 
			text="Create new project" />
			
		<HBox alignment="CENTER_LEFT">
			<Label text="Project name: " />
			<TextField fx:id="name_stf" />
		</HBox>
		<HBox alignment="CENTER_LEFT">
			<Label text="Project path: " />
			<TextField fx:id="path_stf" />
		</HBox>
		<HBox alignment="CENTER_RIGHT">
			<Label 
				styleClass="error"
				alignment="CENTER_RIGHT"
				fx:id="error_sl" />
			<Button 
				text="Create"
				fx:id="create_sb">
				<HBox.margin>
					<Insets left="10" />
				</HBox.margin>
			</Button>
		</HBox>
	</VBox>
</ProjectsScene>

